{
	"compilerOptions": {
		"target": "es5",
		"lib": ["es5"],
		"module": "es2015",
		"moduleResolution": "node",
		"sourceMap": true,
		"declaration": true,
		"declarationDir": "dist/types",
		"noEmit": true,
		"noEmitOnError": true,
		"strict": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
